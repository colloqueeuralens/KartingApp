# Configuration de production pour VPS KMRS Racing
# Copier vers .env.production et remplir les valeurs

# Environnement
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DOMAIN=api.kmrs-racing.eu

# CORS Configuration - Frontend Firebase Hosting
CORS_ORIGINS=https://kmrs-racing.eu,https://kartingapp-fef5c.web.app

# PostgreSQL Database
POSTGRES_DB=kmrs_racing
POSTGRES_USER=kmrs_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# SSL/Security
SSL_CERT_EMAIL=admin@kmrs-racing.eu

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_TIMEOUT=300

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=kmrs-racing-backups

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@kmrs-racing.eu