# Production Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=timing_db
POSTGRES_USER=timing_user
POSTGRES_PASSWORD=your_very_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Firebase Configuration
FIREBASE_PROJECT_ID=kartingapp-fef5c

# Security
SECRET_KEY=your_very_long_random_secret_key_for_jwt_tokens_here_minimum_32_chars
ALLOWED_ORIGINS=https://kmrs-racing.com,https://api.kmrs-racing.com

# Domain Configuration (replace with your domain)
DOMAIN=kmrs-racing.com
API_DOMAIN=api.kmrs-racing.com

# Email for SSL certificates
SSL_EMAIL=your-email@example.com

# VPS Configuration
VPS_IP=your.vps.ip.address
SSH_USER=root

# Optional: Monitoring & Logs
LOG_LEVEL=INFO
SENTRY_DSN=optional_sentry_dsn_for_error_tracking