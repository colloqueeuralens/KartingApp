# Environment variables for karting timing backend

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database settings
DATABASE_URL=postgresql+asyncpg://timing_user:timing_password@localhost:5432/timing_db

# Redis settings (optional)
REDIS_URL=redis://localhost:6379

# Firebase settings
FIREBASE_PROJECT_ID=kartingapp-fef5c
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# Analysis settings
ANALYSIS_DURATION=60
ANALYSIS_MIN_SAMPLES=10
ANALYSIS_TIMEOUT=120

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "https://kartingapp-fef5c.web.app", "http://localhost:5000"]

# Logging
LOG_LEVEL=INFO